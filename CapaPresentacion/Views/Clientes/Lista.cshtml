@model IEnumerable<CapaEntidades.entClientes>

@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Lista de Clientes</h1>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Tabla
        </div>
        <div class="card-body">
            <a class="btn btn-primary btn-block" href="@Url.Action("Insertar","Clientes")">Nuevo Cliente</a>
            <hr />
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Tipo Documento</th>
                        <th>Número Documento</th>
                        <th>Celular</th>
                        <th>Correo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Tipo Documento</th>
                        <th>Número Documento</th>
                        <th>Celular</th>
                        <th>Correo</th>
                        <th>Acciones</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdCliente</td>
                            <td>@item.Nombres</td>
                            <td>@item.Apellidos</td>
                            <td>@item.TipoDocumentoIdentidad</td>
                            <td>@item.DocumentoIdentidad</td>
                            <td>@item.Celular</td>
                            <td>@item.Correo</td>

                            <td>
                                <a class="btn btn-primary btn-block" href="@Url.Action("Editar","Clientes", new { IdCliente = item.IdCliente })">Editar</a>
                                <a class="btn btn-danger btn-block" href="@Url.Action("Eliminar","Clientes", new { IdCliente = item.IdCliente })">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>